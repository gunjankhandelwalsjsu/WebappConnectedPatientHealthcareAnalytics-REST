<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>MongoDBWebapp</display-name>

    <context-param>
        <param-name>MONGODB_HOST</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <param-name>MONGODB_PORT</param-name>
        <param-value>27017</param-value>
    </context-param>
    
    <context-param>
		<param-name>mongoURI</param-name>
		<param-value>
		         mongodb://gunjan:khandelwal@ds059284.mongolab.com:59284/journaldev
 		</param-value>
	</context-param>

    <listener>
        <listener-class>com.ami.context.WebAppContext</listener-class>
    </listener>


    <!-- here we are using the jersey servlet-->
    <servlet>
        <servlet-name>WSService</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>com.ami.webservice</param-value>
        </init-param>
        
        <init-param>
    <param-name>jersey.config.server.provider.classnames</param-name>
    <param-value>org.glassfish.jersey.filter.LoggingFilter;org.glassfish.jersey.media.multipart.MultiPartFeature</param-value>
</init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>WSService</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>



</web-app>
